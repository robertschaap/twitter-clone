extends layout.pug

block content

  main(role='main')
    .widthwrapper
      
      aside.sidebar
        .sidebar_topic
          h3 Trending
          div
            each entry in trendingNotTweets
              div
                div= entry.hashtag
                div #{entry.tweetCount} NotTweets

        .sidebar_topic
          h3 Trending
          p Unintrusive Social Networking since 2018
      
      section.timeline

        each entry in notTweets
          .t_entry
            .t_entry_left
              img.t_entry_avatar(src='/images/aIF6J-S0_bigger.jpg')
            .t_entry_right
              div
                span= entry.userName
                span= entry.userHandle
              div= entry.notTweetBody
              div Like
